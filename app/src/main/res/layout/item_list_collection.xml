<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_material"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/lay_16"
        android:paddingRight="@dimen/lay_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lay_12"
            android:layout_marginTop="@dimen/lay_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lay_16"
                android:background="@drawable/bg_type"
                android:paddingBottom="@dimen/lay_2"
                android:paddingLeft="@dimen/lay_4"
                android:paddingRight="@dimen/lay_4"
                android:paddingTop="@dimen/lay_2"
                android:textColor="#9d9d9d"
                tools:text="博客" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#111111"
                android:textSize="@dimen/font_16"
                tools:text="阿里云疼腾讯" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/lay_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="8"
                android:textColor="#a4a4a4"
                android:textSize="@dimen/font_14"
                tools:text="开源中国" />

            <TextView
                android:id="@+id/tv_fav_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lay_16"
                android:layout_marginRight="@dimen/lay_16"
                android:textColor="#a4a4a4"
                android:textSize="@dimen/font_14"
                tools:text="6分钟前" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="@dimen/lay_2"
                    android:src="@mipmap/ic_fav_normal" />

                <TextView
                    android:id="@+id/tv_fav_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_8"
                    android:layout_marginRight="@dimen/lay_16"
                    android:textColor="#a4a4a4"
                    android:textSize="@dimen/font_14"
                    tools:text="246" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="@dimen/lay_2"
                    android:src="@mipmap/ic_comment_40" />

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lay_8"
                    android:textColor="#a4a4a4"
                    android:textSize="@dimen/font_14"
                    tools:text="246" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/h_line"
        android:layout_marginLeft="@dimen/lay_16" />
</LinearLayout>