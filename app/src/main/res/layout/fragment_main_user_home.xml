<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ques_bt_text_color_light"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <net.oschina.app.improve.widget.SolarSystemView
            android:id="@+id/user_view_solar_system"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ques_bt_text_color_light"
            android:contentDescription="@null"
            android:paddingBottom="8dp"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            app:layout_collapseParallaxMultiplier="0.7" />

        <LinearLayout
            android:id="@+id/rl_show_my_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|top"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <FrameLayout
                android:id="@+id/user_info_head_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_logo_setting"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/ic_title_bar_icon_bg"
                    android:contentDescription="@null"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/btn_my_setting" />

                <ImageView
                    android:id="@+id/iv_logo_zxing"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/ic_title_bar_icon_bg"
                    android:contentDescription="@null"
                    android:padding="12dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/btn_qrcode" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_info_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_portrait"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@mipmap/widget_default_face"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dip" />

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_male" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="thanatosx" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/tv_my_score"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:id="@+id/about_line"
            style="@style/h_line"
            android:layout_height="1px"
            android:background="#FF6FDB94" />

        <LinearLayout
            android:id="@+id/lay_about_info"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/ques_bt_text_color_light"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ly_tweet"
                style="@style/new_user_information_counts"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_tweet"
                    style="@style/user_formation_text"
                    android:ellipsize="none"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="@string/zero"
                    android:textSize="@dimen/font_24" />

                <TextView
                    style="@style/user_formation_info"
                    android:layout_marginBottom="0dp"
                    android:padding="0dp"
                    android:text="@string/main_tab_name_tweet" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_favorite"
                style="@style/new_user_information_counts"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_favorite"
                    style="@style/user_formation_text"
                    android:ellipsize="none"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="@string/zero"
                    android:textSize="@dimen/font_24" />

                <TextView
                    style="@style/user_formation_info"
                    android:layout_marginBottom="0dp"
                    android:padding="0dp"
                    android:text="@string/favorite" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_following"
                style="@style/new_user_information_counts"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_following"
                    style="@style/user_formation_text"
                    android:ellipsize="none"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="@string/zero"
                    android:textSize="@dimen/font_24" />

                <TextView
                    style="@style/user_formation_info"
                    android:layout_marginBottom="0dp"
                    android:padding="0dp"
                    android:text="@string/following" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_follower"
                style="@style/new_user_information_counts"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/lay_12"
                android:paddingRight="@dimen/lay_12">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_follower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:ellipsize="none"
                        android:lines="1"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text="@string/zero"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_24" />

                    <TextView
                        android:id="@+id/user_info_notice_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="right|top"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/ic_red_dot"
                        android:ellipsize="none"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:minWidth="14dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_10"
                        android:visibility="gone"
                        tools:text="1"
                        tools:visibility="visible" />
                </FrameLayout>

                <TextView
                    style="@style/user_formation_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:padding="0dp"
                    android:text="@string/follower"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rl_message"
                        style="@style/option_item_rl">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_my_message" />

                        <TextView
                            style="@style/option_item_text"
                            android:text="@string/message" />

                        <TextView
                            android:id="@+id/user_info_notice_message"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/ic_red_dot"
                            android:ellipsize="none"
                            android:gravity="center"
                            android:lines="1"
                            android:maxLines="1"
                            android:minWidth="14dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_10"
                            android:visibility="gone"
                            tools:text="1"
                            tools:visibility="visible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_arrow_right" />
                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:layout_marginStart="52dp"
                        android:background="@color/list_divider_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rl_blog"
                        style="@style/option_item_rl">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_my_blog" />

                        <TextView
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/blog" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_arrow_right" />
                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:layout_marginStart="52dp"
                        android:background="@color/list_divider_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rl_info_question"
                        style="@style/option_item_rl">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_my_question" />

                        <TextView
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/question" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_arrow_right" />
                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:layout_marginStart="52dp"
                        android:background="@color/list_divider_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rl_info_activities"
                        style="@style/option_item_rl">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_my_event" />

                        <TextView
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/actionbar_title_event" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_arrow_right" />
                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:layout_marginStart="52dp"
                        android:background="@color/list_divider_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rl_team"
                        style="@style/option_item_rl">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_my_team" />

                        <TextView
                            style="@style/option_item_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/team" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:contentDescription="@null"
                            android:src="@mipmap/ic_arrow_right" />
                    </LinearLayout>

                    <View
                        style="@style/h_line"
                        android:layout_height="1px"
                        android:background="@color/list_divider_color" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>


